<section class="wrapper flex">
	<div class="sidebar">
		
	</div>
	<div class="content">
		
		<h2 class="section-ttl">商品一覧</h2>

			<div class="items">
				<% @items.each do |item| %>
					<%= link_to item_path(item) do %>
						<% if item.image.attached? %>
              <%= image_tag item.image, size: "300x300" %>
            <% else %>
              <%= image_tag 'no_image', size: "300x300" %>
            <% end %>
						<p><%= item.name %></p>
						<p><%= item.with_tax_price %>円</p>
					<% end %>
				<% end %>
			</div>
	</div>
</section>